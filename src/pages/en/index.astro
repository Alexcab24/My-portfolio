---
import Layout from "./layouts/Layout.astro";
import Badge from "./components/Badge.astro";
import SectionContainer from "./components/SectionContainer.astro";
import LinkedInIcon from "./components/icons/LinkedIn.astro";
import SocialPill from "./components/SocialPill.astro";
import GitHubIcon from "./components/icons/GitHub.astro";
import MailIcon from "./components/icons/Mail.astro";
import Experience from "./components/Eduaction.astro";
import CodeIcon from "./components/icons/Code.astro";
import Projects from "./components/Projects.astro";
import Books from "./components/icons/Books.astro";
import Person from "./components/icons/Person.astro";
import About from "./components/About.astro";
import Download from "./components/icons/Download.astro";
import Contact from "./components/icons/Contact.astro";
import ContactSec from "./components/ContactSec.astro";

// Structured Data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  name: "Alex Cabral",
  jobTitle: "Full Stack Developer",
  description:
    "Full-stack web developer with experience in freelance projects, specializing in Next.js, TypeScript, and MongoDB",
  url: "https://alexcabral.dev/en",
  image: "https://alexcabral.dev/Alex.jpeg",
  sameAs: [
    "https://www.linkedin.com/in/alex-cabral-951887231/",
    "https://github.com/Alexcab24",
  ],
  knowsAbout: [
    "JavaScript",
    "TypeScript",
    "React",
    "Next.js",
    "Node.js",
    "MongoDB",
    "PostgreSQL",
    "AWS",
    "Docker",
    "C#",
    ".NET",
  ],
  hasOccupation: {
    "@type": "Occupation",
    name: "Software Developer",
    occupationLocation: {
      "@type": "Country",
      name: "Spain",
    },
  },
};
---

<Layout
  title="Alex Cabral - Full Stack Developer | Portfolio"
  description="Full-stack web developer with experience in React, Next.js, TypeScript, Node.js, MongoDB and more. Specialized in creating modern and scalable web applications."
  keywords="full stack developer, react developer, nextjs, typescript, javascript, nodejs, mongodb, portfolio, alex cabral, web developer"
  ogImage="/og-image.jpg"
  structuredData={structuredData}
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-32" id="home">
      <section
        class="flex flex-col justify-center items-center md:justify-start md:items-start"
      >
        <img
          class="animate-blurred-fade-in w-52 h-52 md:w-40 md:h-40 rounded-full bg-[#F5F5F5] mb-10 shadow-xl"
          src="/AlexCabral.png"
          alt="alexcab photo"
        />
        <div class="text-center lg:text-left lg:mr-10">
          <h2
            class="text-primary-text dark:text-white text-4xl md:text-3xl lg:text-5xl sm:text-2xl font-bold flex flex-row gap-x-2 pb-4 lg:pb-6 animate-fade-in-up animate-duration-slower"
          >
            Heyüëãüèª, I'm Alex Cabral
          </h2>
          <div
            class="animate-fade-in-up animate-delay-700 animate-duration-slower"
          >
            <h2
              class="text-sm md:text-lg lg:text-2xl text-balance max-w-[700px] text-black dark:text-white"
            >
              <span
                class="text-secondary dark:text-secondary-light font-semibold"
                >Web Developer</span
              >.
              <span
                class="bg-gradient-to-r text-transparent bg-clip-text from-red-500 to-blue-500"
                >From Santo Domingo, Dominican Republic</span
              >üá©üá¥.
            </h2>
            <div class="flex gap-2 mt-2">
              <div>
                <Badge>Available for work</Badge>
              </div>
              <a href="https://sublyt.com" target="_blank">
                <Badge>Currently developing Sublyt</Badge>
              </a>
            </div>
          </div>
        </div>
      </section>

      <nav class="flex flex-col md:flex-row mx-8 md:mx-0 gap-4 mt-8 flex-wrap">
        <SocialPill
          class={`
          animate-blurred-fade-in
          bg-secondary dark:bg-secondary-dark
          rounded-full
          flex justify-center items-center gap-x-2
          border-2 border-sky-300 dark:border-sky-700
          py-3 px-2 md:py-2 md:px-4
          text-base
          text-white
          transition
          hover:bg-blue-500 
          hover:bg-opacity-25 
          hover:border-blue-500
          duration-300 
          ease
        `}
          href="https://www.linkedin.com/in/alex-cabral-951887231/?locale=en_US"
        >
          <LinkedInIcon class="size-5 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill
          class={`
          animate-blurred-fade-in
          bg-secondary dark:bg-secondary-dark
          rounded-full
          flex justify-center items-center gap-x-2
          py-3 px-2 md:py-2 md:px-4
          text-base
          text-white
          transition
          hover:bg-[#6e5494] 
          hover:bg-opacity-25 
          border-2 border-sky-300 dark:border-sky-700
          hover:border-[#6e5494] 
          duration-300 
          ease
        `}
          href="https://github.com/Alexcab24"
        >
          <GitHubIcon class="size-5 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill
          class={`
          animate-blurred-fade-in
          bg-secondary dark:bg-secondary-dark
          rounded-full
          flex justify-center items-center gap-x-2
          py-3 px-2 md:py-2 md:px-4
          text-base
          text-white
          transition
          hover:bg-[#c71610] 
          hover:bg-opacity-25 
          border-2 border-sky-300 dark:border-sky-700
          hover:border-[#c71610] 
          duration-300 
          ease
        `}
          href="mailto:acabral2442@gmail.com"
        >
          <MailIcon class="size-5 md:size-6" />
          acabral2442@gmail.com
        </SocialPill>
        <SocialPill
          download
          class={`
          animate-blurred-fade-in
          bg-secondary dark:bg-secondary-dark
          rounded-full
          flex justify-center items-center gap-x-2
          py-3 px-2 md:py-2 md:px-4
          text-base
          text-white
          transition
          hover:bg-blue-500 
          hover:bg-opacity-25 
          border-2 border-sky-300 dark:border-sky-700
          hover:border-[#6e5494] 
          duration-300 
          ease
        `}
          href="/docs/en/alex-cabral-cv-english.pdf"
        >
          <Download class="size-5 md:size-6" />
          Download CV
        </SocialPill>
      </nav>
    </SectionContainer>

    <SectionContainer id="education">
      <h2
        class="text-5xl drop-shadow-lg font-bold mb-6 flex gap-x-3 items-center text-primary-text dark:text-white"
      >
        <Books class="size-12 drop-shadow-lg" />
        Education
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="projects">
      <h2
        class="text-5xl font-bold drop-shadow-lg mb-6 flex gap-x-3 items-center text-primary-text dark:text-white"
      >
        <CodeIcon class="size-12 drop-shadow-lg" />
        Projects
      </h2>
      <div>
        <Projects />
      </div>
    </SectionContainer>

    <SectionContainer id="about-me">
      <h2
        class="text-5xl font-bold mb-6 drop-shadow-lg flex gap-x-3 items-center text-primary-text dark:text-white"
      >
        <Person class="size-12 drop-shadow-lg" />
        About Me
      </h2>
      <About />
    </SectionContainer>

    <SectionContainer id="contact">
      <h2
        class="text-5xl font-bold drop-shadow-lg mb-6 flex gap-x-3 items-center text-primary-text dark:text-white"
      >
        <Contact
          class="size-12 drop-shadow-lg fill-primary-text dark:fill-white"
        />
        Contact
      </h2>
      <ContactSec />
    </SectionContainer>
  </main>
</Layout>
